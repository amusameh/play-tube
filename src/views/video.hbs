<main class="main-container">
    <section class="video-container">
        <section class="watch-container">
            <div class="video-player">
              <video id="player1" width="815" height="421" controls preload="none" poster={{videoDetail.poster}}>
                  <source src={{videoDetail.url}} >
              </video>
            </div>
            <div class="video-description">
                <div class="video-big-title">
                    <h1>{{videoDetail.title}}</h1>
                </div>
                <div class="line">
                    <div class="video-likes pull-right">
                        <div class="like-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-up"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
                            <span>{{videoDetail.like}}</span>
                        </div>
                        <div class="video-info-element">
                            <div class="view-bar"></div>
                        </div>
                        <div class="like-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-down"><path d="M10 15v4a3 3 0 0 0 3 3l4-9V2H5.72a2 2 0 0 0-2 1.7l-1.38 9a2 2 0 0 0 2 2.3zm7-13h2.67A2.31 2.31 0 0 1 22 4v7a2.31 2.31 0 0 1-2.33 2H17"></path></svg>
                            <span>{{videoDetail.dislike}}</span>
                        </div>
                    </div>
                    <div class="video-views" id="video-views">{{videoDetail.views}} Views</div>
                </div>
                <div class="publisher-elment ">
                    <div class="publisher-avatar">
                        <a href="#">
                            <img src="https://playtubescript.com/upload/photos/2018/02/lh6gXQzuRDzDYWpi4z2j_12_ada42da33b3d6dafc7b79ec3bd597781_image.png" alt="avatar">
                        </a>
                    </div>
                    <div class="publisher-name">
                        <a href="/{{videoDetail.channelId}}">{{videoDetail.channelName}}</a>
                    </div>
                    {{#unless isOwner}}
                    <div class="publisher-subscribe-button ">
                        <button class="btn btn-blue">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                          {{#if subscribed}}
                          <a href="/subscribe/{{videoDetail.channelId}}">subscribed</a></button>
                          {{else}}
                          <a href="/subscribe/{{videoDetail.channelId}}">subscribe</a></button>
                          {{/if}}
                        <span>{{subscribtionCount}}</span>
                    </div>
                    {{/unless}}
                </div>
                <div class="video-options line">
                    <button class="pull-left" id="share-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-share-2"><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"></circle><circle cx="18" cy="19" r="3"></circle><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line></svg>Share</button>
                    <button class="pull-left" id="embed-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-code"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>Embed</button>
                    <button class="pull-right" id="report-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-flag"><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"></path><line x1="4" y1="22" x2="4" y2="15"></line></svg>Report</button>
                    <button class="pull-right" id="addto-btn"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>Add to</button>
                    <div class="clear"></div>
                    <div class="embed-text hidden">
                        <textarea name="embed" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="share-video hidden">
                        <a href="#" class="fa fa-facebook"></a>
                        <a href="#" class="fa fa-twitter"></a>
                        <a href="#" class="fa fa-google"></a>
                        <a href="#" class="fa fa-link"></a>
                    </div>
                    <div class="report-pop hidden">
                        <h2><i class="fa fa-flag fa-fw"></i> Report this video</h2>
                        <p>Please write a summary of what this video was about                            </p>
                        <textarea name="erport-message" placeholder="message"></textarea>
                        <div class="button-pop">
                            <button class="submit">Submit</button>
                            <button class="cansle-report">Cancel</button>
                        </div>
                    </div>
                    <div class="addto-pop hidden">
                        <h2 class="line"><i class="fa fa-th-list"></i>  Add to</h2>
                        <p>No PlayLists Found!</p>
                        <div class="button-pop">
                            <button class="create-playlist-btn"><i class="fa fa-plus"></i> Create new</button>
                            <button class="cansle-report" id="cansle-addto">Cancel</button>
                        </div>
                    </div>
                    <div class="create-playlist-pop hidden">
                        <h2><i class="fa fa-plus"></i> Create new playlist</h2>
                        <input type="text" placeholder="Playlist name 0 / 30">
                        <select class="form-control">
                            <option value="1" selected>Privacy</option>
                            <option value="1">Public</option>
                            <option value="0">Private</option>
                        </select>
                        <textarea name="erport-message" placeholder="Description.."></textarea>
                        <div class="button-pop">
                            <button class="submit"><i class="fa fa-plus-circle"></i>Submit</button>
                            <button class="cansle-create-playlist">Cancel</button>
                        </div>
                    </div>
                </div>
                <div class="video-published">
                    Published on {{videoDetail.publishTime}} / In
                    <a href="#">{{videoDetail.category}}</a>
                </div>
                <div class="watch-video-description">
                    <p>
                        {{videoDetail.description}}
                    </p>
                </div>
                <div class="video-show-description">
                    Show more
                </div>
            </div>
        </section>
        <section class="video-comment">
            <div class="comment-header">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                {{commentsNumber}} Comments
                <span class="coments-sort-dropdown">
                    <span class="pull-right">
                        <i class="material-icons" id="sort-menu-icon">&#xE164;</i>
                        Sort By
                    </span>
                    <ul class="comments-sort-menu pull-right hidden" id="sort-menu">
                        <li>Top Comment</li>
                        <li>Latest Comment</li>
                    </ul>
                </span>
            </div>
            <div class="add-comment line">
                <img src="https://playtubescript.com/upload/photos/2018/02/lh6gXQzuRDzDYWpi4z2j_12_ada42da33b3d6dafc7b79ec3bd597781_image.png" alt="" srcset="">
                <form id="CommentForm" action="/addComment" method="post">
                  <textarea name="comment" id="commentText"></textarea>
                  <button type="submit" class="btn-blue" id="sendPost">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                  </button>
                </form>
            </div>
            {{#each commentsDetails}}
            <div class="user-comments">
                <div class="main-comment">
                    <div class="user-avatar">
                        <img src="https://playtubescript.com/upload/photos/2018/02/lh6gXQzuRDzDYWpi4z2j_12_ada42da33b3d6dafc7b79ec3bd597781_image.png" alt="">
                    <div class="user-name">
                        <a href="/{{this.userId}}">{{this.username}}</a>
                        <small>{{this.time}}</small>
                    </div>
                    <div class="user-comment">
                        <p class="comment-text">{{this.content}}</p>
                        <div class="vote-comment">
                            <span class="comment-reply">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                            </span>
                            <span class="vote-comment-btn">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-up "><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
                                </span>
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-down "><path d="M10 15v4a3 3 0 0 0 3 3l4-9V2H5.72a2 2 0 0 0-2 1.7l-1.38 9a2 2 0 0 0 2 2.3zm7-13h2.67A2.31 2.31 0 0 1 22 4v7a2.31 2.31 0 0 1-2.33 2H17"></path></svg>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            </div>

        {{#each this.child}}
          <div class="sub-comments">
              <div class="main-comment">
                  <div class="user-avatar">
                      <img src="https://playtubescript.com/upload/photos/2018/02/lh6gXQzuRDzDYWpi4z2j_12_ada42da33b3d6dafc7b79ec3bd597781_image.png" alt="">
                  <div class="user-name">
                      <a href="/{{this.user_id}}">{{this.username}}</a>
                      <small>{{this.time}}</small>
                  </div>
                  <div class="user-comment">
                      <p class="comment-text">
                        {{#if this.parent}}
                        <a href="/{{this.parentUserId}}"> @{{this.parent}} </a>
                        {{/if}}
                        {{this.content}}
                      </p>
                      <div class="vote-comment">
                          <span class="comment-reply">
                              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                          </span>
                          <span class="vote-comment-btn">
                              <span>
                                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-up "><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
                              </span>
                              <span>
                                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-down "><path d="M10 15v4a3 3 0 0 0 3 3l4-9V2H5.72a2 2 0 0 0-2 1.7l-1.38 9a2 2 0 0 0 2 2.3zm7-13h2.67A2.31 2.31 0 0 1 22 4v7a2.31 2.31 0 0 1-2.33 2H17"></path></svg>
                              </span>
                          </span>
                      </div>
                  </div>
              </div>
          </div>
          </div>
        {{/each}}
        {{/each}}
      </section>


    </section>
    <aside class="up-next">
        <div class="video-next next-line">
            <div class="next-text pull-left">
                <h4>Up next</h4>
            </div>
            <div class="checkbox pull-right" >
                <input type="checkbox" id="autoplay">
                <label for="autoplay">Autoplay</label>
            </div>
            <div class="clear"></div>

        </div>
        {{#each allVideos}}
        <div class="video-list next-line">
            <div class="video-wrapper">
                <div class="video-thumb pull-left">
                    <a href="/watch/{{this.hashed_id}}">
                        <img src="{{this.poster_url}}" alt="video title">
                    </a>
                </div>
                <div class="video-title pull-right">
                    <a href="/watch/{{this.hashed_id}}">{{this.title}}</a>
                </div>
                <div class="video-publisher pull-right">{{this.username}}</div>
                <div class="video-views pull-right">122 views</div>
            </div>
            <div class="clear"></div>
        </div>
        {{/each}}

    </aside>
</main>
